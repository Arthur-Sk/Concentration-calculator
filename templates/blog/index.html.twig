{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-9 posts">
    {% if post_values is defined %}
        {% for post in post_values %}


            <article class="post">
                <h2><a href="#">{{ post.title }}</a></h2>
                <p class="post-metadata">
                    <span class="metadata"><i class="fa fa-calendar"></i>Date</span>
                    <span class="metadata"><i class="fa fa-user"></i>{{ post.username }}</span>
                </p>
                <p>{{ post.body }}</p>
            </article>
            <div class="row postBtns">
                <a class="btn btn-primary btn-sm btn-del" data-postid="{{ post.id }}">Delete</a>
                <a class="btn btn-primary btn-sm btn-edit" data-postid="{{ post.id }}">Edit</a>
            </div>

        {% endfor %}
    {% endif %}
        </div>
        <div class="sidebar well well-lg col-sm-3">
            {{ form_start(post_form) }}
            <div class="form-group">
                {{ form_widget(post_form) }}
            </div>
            {{ form_end(post_form) }}
        </div>
    </div>


{% endblock %}
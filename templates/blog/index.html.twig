{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-9 posts">
    {% if postValues is defined %}
        {% for post in postValues %}


            <article class="post">
                <h2><a href="#">{{ post.title }}</a></h2>
                <p class="post-metadata">
                    <span class="metadata"><i class="fas fa-calendar"></i>Date</span>
                    <span class="metadata"><i class="fas fa-user"></i>{{ post.username }}</span>
                </p>
                <p>{{ post.body }}</p>
            </article>
            <div class="row postBtns">
                <a class="btn btn-primary btn-sm btn-del" data-postid="{{ post.id }}">Delete</a>
                <a class="btn btn-primary btn-sm btn-edit" data-postid="{{ post.id }}">Edit</a>
            </div>

        {% endfor %}
    {% endif %}
        </div>
        <div class="sidebar well well-lg col-sm-3">
            {{ form_start(postForm) }}
            <div class="form-group">
                {{ form_widget(postForm) }}
            </div>
            {{ form_end(postForm) }}
        </div>
    </div>

    <!-- Modal, test -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Launch demo modal
    </button>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
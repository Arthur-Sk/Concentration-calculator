{% extends 'base.html.twig' %}
{% form_theme calc_form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block title %}Calculator{% endblock %}

{% block body %}
    <br />
    <h3>Base liquid nicotine strength calculator</h3>
    {% if calc_form is defined %}
        {{ form_start(calc_form) }}
        {{ form_widget(calc_form) }}
        {{ form_end(calc_form) }}
    {% endif %}

    {% if values is defined %}
        <br />
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Base liquid concentrate, mg/ml</th>
                    <th scope="col">Nicotine (booster) concentrate, mg/ml</th>
                    <th scope="col">Final concentrate, mg/ml</th>
                    <th scope="col" class="bg-primary">Nicotine (booster) volume, ml</th>
                    <th scope="col" class="bg-primary">Liquid base volume, ml</th>
                    <th scope="col">Final volume, ml</th>
                </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ values.cb }}</td>
                <td>{{ values.cn }}</td>
                <td>{{ values.cv }}</td>
                <td class="bg-primary">{{ Vn|round(1) }}</td>
                <td class="bg-primary">{{ Vb|round(1) }}</td>
                <td>{{ values.Vv }}</td>
            </tr>
            </tbody>
        </table>
    {% endif %}

{% endblock %}
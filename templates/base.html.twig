<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Base title{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/css/app-demo.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/css/post.css') }}">
    {% endblock %}
</head>
<body>
<header>
{% block header %}
    <div class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                {% block navbar_buttons %}
                    <a class="navbar-brand" href="/">Welcome page</a>
                    <a class="navbar-brand" href="/calc/">Calculator</a>
                    <a class="navbar-brand" href="/blog/">Blog</a>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
</header>

<div id="content" class="container body-container">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
    <script src="{{ asset('build/manifest.json') }}"></script>
    <script src="{{ asset('bundles/js/post.js') }}"></script>
{% endblock %}
{% block footer %}
    <footer class="panel-footer">
        <div class="container">
            <div class="row text-center">
                <p class="align-center">&copy; {{ 'now'|date('Y') }} - Blog <br />Here's footer</p>
            </div>
        </div>
    </footer>

{% endblock %}
</body>
</html>